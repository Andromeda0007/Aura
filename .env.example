# Backend Environment Variables
DATABASE_URL=postgresql://aura_user:aura_dev_password@localhost:5432/aura_db
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480

# AI Services
# NOTE: Using local Whisper - no OpenAI API key needed
GEMINI_API_KEY=your-google-gemini-api-key

# Local Storage Path - Change to your preferred location
LOCAL_STORAGE_PATH=D:/Aura-Storage

# Cloud Storage - Only needed for production deployment
# Leave empty for local development

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
MAX_CONCURRENT_SESSIONS=100
COMPRESSION_TOKEN_LIMIT=10000

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Frontend Environment Variables (copy to frontend/.env.local)
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
NEXT_PUBLIC_APP_NAME=Aura
